<body>

    <div class="container">
        <h1>Face Recognition Attendance System</h1>

        <!-- Capture Image Button -->
        <button type="button" class="btn btn-primary" onclick="captureImage()">Capture Image</button>

        <!-- Start Recognition Button -->
        <button type="button" class="btn btn-success" onclick="startRecognition()">Start Recognition</button>

        <!-- View Attendance Records Button -->
        <button type="button" class="btn btn-info" onclick="viewRecords()">View Attendance Records</button>
    </div>

    <div class="footer">
        <p>&copy; 2024 Attendance System | Developed by [Your Name]</p>
    </div>

    <!-- Bootstrap JS and dependencies (Optional) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- JavaScript functions to handle button clicks -->
    <script>
        function captureImage() {
            fetch('/capture_image', { method: 'POST' })
                .then(response => response.json())
                .then(data => {
                    alert(data.message);  // Display response from the backend
                })
                .catch(error => console.error('Error:', error));
        }

        function startRecognition() {
            fetch('/recognize_face', { method: 'POST' })
                .then(response => response.json())
                .then(data => {
                    alert(data.message);  // Display recognition result
                })
                .catch(error => console.error('Error:', error));
        }

        function viewRecords() {
            fetch('/view_records')
                .then(response => response.json())
                .then(data => {
                    if (data.length > 0) {
                        let records = data.map(record => `${record.Name} - ${record.Date} - ${record.Time}`).join('\n');
                        alert(records);  // Display attendance records
                    } else {
                        alert('No attendance records found.');
                    }
                })
                .catch(error => console.error('Error:', error));
        }
    </script>

</body>
